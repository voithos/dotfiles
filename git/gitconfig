[user]
    name = Zaven Muradyan
    email = zaven@voithos.io

[core]
    editor = vim
    autocrlf = false

[merge]
    tool = meld

[alias]
    # Shorthand for status
    st = status -sb

    # Log aliases
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
    slog = log --pretty=oneline
    glog = log --graph --all

    # Grep
    g = grep --break --heading --line-number

    # Conflicts shorthand
    conflicts = diff --name-only --diff-filter=U

[branch]
    autosetuprebase = always

[push]
    default = matching

[pull]
    rebase = true

[credential]
    helper = cache --timeout=3600

[grep]
    extendRegexp = true
    lineNumber = true

[hub]
    protocol = https

[include]
    path = .gitconfiglocal

[rerere]
    enabled = true
