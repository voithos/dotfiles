[user]
    name = Zaven Muradyan
    email = zaven@voithos.io

[core]
    editor = vim

[merge]
    tool = meld

[alias]
    # Convenience shorthands
    st = status -sb --ignore-submodules
    co = checkout
    d = diff
    rv = remote -v
    bv = branch -vv
    amend = commit --amend

    # Log aliases
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
    slog = log --pretty=oneline
    glog = log --graph --all
    last = log -1 HEAD --stat

    # Grep
    g = grep --break --heading --line-number

    # Conflicts shorthand
    conflicts = diff --name-only --diff-filter=U

[branch]
    autosetuprebase = always

[push]
    default = matching

[pull]
    rebase = true

[credential]
    helper = cache --timeout=3600

[grep]
    extendRegexp = true
    lineNumber = true

[rerere]
    enabled = true

[init]
    defaultBranch = main

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[include]
    path = .gitconfiglocal
